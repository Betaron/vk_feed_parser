<Window x:Class="vk_feed_parser.AddUserDataWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:vk_feed_parser"
        mc:Ignorable="d"
        Title="Preferences" Height="100" Width="400">
    <Grid Background="LightGray">
		<StackPanel VerticalAlignment="Center" >
			<TextBlock Margin="10 0 10 5">
				<Run Text="Enter the full path to the"/>
				<Run Text="User Data" FontStyle="Italic"/>
				<Run Text="of your web browser:"/>
			</TextBlock>
			<TextBox Margin="10 0 10 0"/>
			<StackPanel Orientation="Horizontal">
				<Button x:Name="applyUserData" Content="Apply" Width="70" Margin="10 10 10 0"/>
			</StackPanel>
		</StackPanel>
    </Grid>
</Window>
