<Window x:Class="vk_feed_parser.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:vk_feed_parser"
        mc:Ignorable="d"
        Title="VkFeedParser 3000" Height="300" Width="600" MinHeight="200" MinWidth="400" Loaded="Window_Loaded">
	<Window.Resources>
		<Style x:Key="leftPanelBtn" TargetType="Button">
			<Setter Property="FontSize" Value="16"/>
			<Setter Property="Margin" Value="5"/>
			<Setter Property="Width" Value="120"/>
		</Style>
	</Window.Resources>
	<Grid Background="LightGray">
		<Grid.ColumnDefinitions>
			<ColumnDefinition Width="150"/>
			<ColumnDefinition/>
		</Grid.ColumnDefinitions>
		<StackPanel Grid.Column="0" Margin="0 6 0 0">
			<Button x:Name="setPreferences"
					Content="Preferences"
					Style="{StaticResource leftPanelBtn}"/>
			<Button x:Name="runChrome"
				Content="Run" 
				Style="{StaticResource leftPanelBtn}"/>
		</StackPanel>
		<Border Grid.Column="1"  Margin="10"  BorderBrush="#404040" BorderThickness="3">
			<Grid>
				<Grid.RowDefinitions>
					<RowDefinition Height="24"/>
					<RowDefinition Height="3"/>
					<RowDefinition/>
				</Grid.RowDefinitions>
				<TextBlock Grid.Row="0" FontSize="16" Padding="5 0 0 0" Background="#505050">
						<Run Text="Logs" Foreground="White"/>
				</TextBlock>
				<Rectangle Grid.Row="1" Fill="#404040"/>
				<ScrollViewer x:Name="logScroll" Grid.Row="2" Background="Black">
					<StackPanel x:Name="logStack">

					</StackPanel>
				</ScrollViewer>
			</Grid>
		</Border>
	</Grid>
</Window>
