<Window x:Class="vk_feed_parser.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:vk_feed_parser"
        mc:Ignorable="d"
        Title="VkFeedParser 3000" Height="300" Width="600" MinHeight="200" MinWidth="400">
	<Grid Background="LightGray">
		<Grid.ColumnDefinitions>
			<ColumnDefinition Width="100"/>
			<ColumnDefinition/>
		</Grid.ColumnDefinitions>
		<Button x:Name="runChrome" 
				Grid.Column="0" 
				Content="Run" 
				FontSize="16"
				VerticalAlignment="Top" 
				HorizontalAlignment="Center" 
				Margin="10" 
				Width="70"/>
		<Border Grid.Column="1"  Margin="10"  BorderBrush="#404040" BorderThickness="3">
			<Grid>
				<Grid.RowDefinitions>
					<RowDefinition Height="24"/>
					<RowDefinition Height="3"/>
					<RowDefinition/>
				</Grid.RowDefinitions>
				<TextBlock Grid.Row="0" FontSize="16" Padding="5 0 0 0" Background="#505050">
						<Run Text="Logs" Foreground="White"/>
				</TextBlock>
				<Rectangle Grid.Row="1" Fill="#404040"/>
				<ScrollViewer x:Name="logScroll" Grid.Row="2" Background="Black">
					<StackPanel x:Name="logStack">

					</StackPanel>
				</ScrollViewer>
			</Grid>
		</Border>
	</Grid>
</Window>
