<Window x:Class="vk_feed_parser.TwoFactorAuthWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:vk_feed_parser"
        mc:Ignorable="d"
        Title="Authorize Code" Height="150" Width="200">
	<Grid Background="LightGray">
		<StackPanel VerticalAlignment="Center">
			<StackPanel VerticalAlignment="Top">
				<TextBlock Margin="10 10 10 5">
					<Run Text="Enter code from your phone: "/>
				</TextBlock>
				<PasswordBox x:Name="passBox" Margin="10 0 10 0"/>
			</StackPanel>
			<StackPanel Orientation="Horizontal">
				<Button x:Name="apply" Content="Apply" Width="70" Margin="10 10 10 0" Click="apply_Click"/>
			</StackPanel>
		</StackPanel>
	</Grid>
</Window>
