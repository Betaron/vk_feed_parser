<Window x:Class="vk_feed_parser.Windows.BrowserLoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:vk_feed_parser.Windows"
		xmlns:cefSharp="clr-namespace:CefSharp.Wpf;assembly=CefSharp.Wpf"
        mc:Ignorable="d"
        Title="BrowserLoginWindow" Height="450" Width="800">
	<Grid>
		<Grid.RowDefinitions>
			<RowDefinition/>
			<RowDefinition Height="5"/>
		</Grid.RowDefinitions>
		<cefSharp:ChromiumWebBrowser x:Name="Browser" Grid.Row="0" Address="https://google.com"/>
		<ProgressBar Grid.Row="1" IsIndeterminate="{Binding ElementName=Browser, Path=IsLoading, IsAsync=True}"/>
	</Grid>
</Window>
